        android:theme="@style/MyMaterialTheme">
        <receiver android:name="com.cendev.cenproyec.BLL.AlarmReceiver" />

        <activity android:name="com.cendev.cenproyec.financialmanagement.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.cendev.cenproyec.financialmanagement.Main2Activity" />
        <activity android:name="com.cendev.cenproyec.financialmanagement.MovimientoActivity">
            android:windowSoftInputMode="adjustNothing"
        </activity>
        <activity android:name="com.cendev.cenproyec.financialmanagement.PreferenciasActivity"></activity>
    </application>

</manifest>